<p>
  <strong>Number:</strong>
  <%= @rectangle.number %>
</p>

<p>
  <strong>Width:</strong>
  <%= @rectangle.Width %>
</p>
 
<p>
  <strong>Height:</strong>
  <%= @rectangle.Height %>
</p>

<p>
   <strong>Color:</strong>
   <%= @rectangle.Color%>
</p>

<canvas id="<%= @rectangle.number %>" width="<%=@rectangle.Width%>" height="<%=@rectangle.Height%>" style="border:1px solid #000000;"></canvas>
<script>
var c = document.getElementById("<%= @rectangle.number %>");
var ctx = c.getContext("2d");
ctx.fillStyle = "<%=@rectangle.Color%>";
ctx.fillRect(0,0,"<%=@rectangle.Width%>","<%=@rectangle.Height%>");
</script>
